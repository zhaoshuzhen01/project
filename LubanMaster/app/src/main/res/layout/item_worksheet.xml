<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/serviceState"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_60dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="服务中"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_cecece"></View>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="2017-11-04(周五)13：00-14：00"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="北京市朝阳区"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="工单号：3423225345353656"
        android:textColor="@color/color_cecece" />

    <View
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_cecece"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/finishState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务完成"
            android:padding="@dimen/dp_8"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:background="@drawable/listback"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/daohangState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始导航"
            android:focusable="false"
            android:layout_toLeftOf="@+id/finishState"
            android:padding="@dimen/dp_8"
            android:background="@drawable/listback"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/black" />
    </RelativeLayout>
</LinearLayout>