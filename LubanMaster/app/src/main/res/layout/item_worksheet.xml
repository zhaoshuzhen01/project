<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h_12dp"
            android:src="@drawable/workservie" />

        <TextView
            android:id="@+id/serviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="服务中"
            android:textColor="@color/black" />
    </LinearLayout>
    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/h_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/h_12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/worktime" />

        <TextView
            android:id="@+id/worklist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/text_size_13"

            android:text="2017-11-04(周五)13：00-14：00"
            android:textColor="#333333" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/h_15dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/h_12dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/worklocation" />

        <TextView
            android:id="@+id/worklist_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:textSize="@dimen/text_size_13"
            android:text="北京市朝阳区"
            android:textColor="#333333" />
    </LinearLayout>

    <TextView
        android:id="@+id/worklist_code"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/h_12dp"
        android:layout_marginBottom="@dimen/h_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="工单号：3423225345353656"
        android:textSize="@dimen/text_size_13"

        android:textColor="@color/color_999" />

    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>

    <RelativeLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_44dp">

        <TextView
            android:id="@+id/finishState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务完成"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_13"
            android:gravity="center"
            android:focusable="false"
            android:padding="@dimen/h_6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/listback"
            android:layout_marginRight="@dimen/h_12dp"
            android:textColor="@color/color_666" />
        <TextView
            android:id="@+id/daohangState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始导航"
            android:focusable="false"
            android:gravity="center"
            android:textSize="@dimen/text_size_13"
            android:padding="@dimen/h_6dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/finishState"
            android:background="@drawable/listback"
            android:layout_marginRight="@dimen/h_10dp"
            android:textColor="@color/color_666" />
    </RelativeLayout>
</LinearLayout>