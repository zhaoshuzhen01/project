<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#bbbbbb"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_menu_headimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_menu_rate"
                    style="@android:style/Widget.Holo.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.1"/>

                <TextView
                    android:id="@+id/tv_menu_rate"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="4.1分"
                    android:textColor="#333333"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_phone"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="手机号"/>

        <TextView
            android:id="@+id/tv_menu_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158****9999"
            android:textColor="#666666"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_address"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="我的住址"/>
    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_service"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="联系客服"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_workcode"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="我的工作码"/>
    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_workcalendar"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="工作日历"/>
    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/ll_menu_askforleave"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="我要请假"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <View
        style="@style/horizontal_line"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:id="@+id/ll_menu_aboutus"
        style="@style/leftmenu_linearlayout"
        >

        <ImageView
            style="@style/leftmenu_icon"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            style="@style/leftmenu_text"
            android:text="关于我们"/>

    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_menu_logout"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_btn_send_code_bg"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="15dp"/>
    </LinearLayout>
</LinearLayout>