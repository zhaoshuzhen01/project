<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/h_12dp"
        android:paddingTop="@dimen/h_12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h_12dp"
            android:src="@drawable/msg_work" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/msgState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h_14dp"
        android:layout_marginLeft="@dimen/h_18dp"
        android:gravity="center"
        android:text="任务提醒"
        android:textColor="@color/color_333333" />
    <TextView
        android:id="@+id/msgContent"
        android:layout_below="@+id/msgState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h_13dp"
        android:layout_marginLeft="@dimen/h_18dp"
        android:layout_marginTop="@dimen/h_10dp"
        android:gravity="center"
        android:text="欢迎使用鹿班"
        android:textColor="@color/color_999999" />
    <TextView
        android:id="@+id/msgTime"
        android:layout_alignBaseline="@+id/msgState"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h_11dp"
        android:layout_marginRight="@dimen/h_12dp"
        android:layout_marginTop="@dimen/h_10dp"
        android:gravity="center"
        android:text="2017-12-6"
        android:textColor="@color/color_999999" />
</RelativeLayout>
    </LinearLayout>
    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>
</LinearLayout>