<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:onClick="onBack">

            <ImageView
                style="@style/my_title_back"/>

            <TextView
                style="@style/my_title_text"
                android:text="关于鹿班"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="34dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon"/>

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="12dp"
            android:text="当前版本:    1.00"
            android:textColor="#333333"
            android:textSize="13sp"/>

        <View
            style="@style/horizontal_line"/>

        <LinearLayout
            android:id="@+id/ll_menu_address"
            style="@style/leftmenu_linearlayout"
            android:onClick="onUpdate"
            >

            <TextView
                style="@style/leftmenu_text"

                android:text="检查更新"/>

            <ImageView
                style="@style/about_icon"/>
        </LinearLayout>

        <View
            style="@style/horizontal_line"/>

        <LinearLayout
            android:id="@+id/ll_menu_service"
            style="@style/leftmenu_linearlayout"
            android:onClick="onUserAggrement"
            >


            <TextView
                style="@style/leftmenu_text"
                android:text="用户协议"/>


            <ImageView
                style="@style/about_icon"/>

        </LinearLayout>

        <View
            style="@style/horizontal_line"/>

        <LinearLayout
            android:id="@+id/ll_menu_workcode"
            style="@style/leftmenu_linearlayout"
            android:onClick="onGoRate"
            >


            <TextView
                style="@style/leftmenu_text"
                android:text="去评分"/>

            <ImageView
                style="@style/about_icon"/>
        </LinearLayout>

        <View
            style="@style/horizontal_line"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="青岛鹿班到家信息技术有限公司"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="Beijing********** Technology Co.,Ltd"
            android:textColor="#e94b4e"
            android:textSize="11sp"/>
    </LinearLayout>

</layout>

