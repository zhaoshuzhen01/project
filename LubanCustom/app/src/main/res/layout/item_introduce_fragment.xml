<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <View
        android:layout_marginLeft="@dimen/h_10dp"
        android:layout_width="@dimen/h_2dp"
        android:layout_height="@dimen/h_14dp"
        android:background="@color/color_ff0000"></View>
    <TextView
        android:id="@+id/home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冰箱"
        android:layout_marginLeft="@dimen/h_8dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/h_14dp" />
</LinearLayout>
    <ImageView
        android:id="@+id/state_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/homelistdefaut" />

</LinearLayout>