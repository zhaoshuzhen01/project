<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/state_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bingxiangicon" />

    <TextView
        android:id="@+id/home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="冰箱"
        android:layout_marginTop="@dimen/h_5dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/h_14dp" />

    <TextView
        android:id="@+id/home_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_5dp"
        android:gravity="center"
        android:text="223"
        android:visibility="gone"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/h_13dp" />
</LinearLayout>