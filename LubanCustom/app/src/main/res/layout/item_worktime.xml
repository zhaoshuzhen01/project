<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ll_worktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e55c5e"
                android:minHeight="50dp"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_worktime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-2dp"
            android:text="08:00"
            android:textColor="#333333"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_worktime_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="-2dp"
            android:text="(请假)"
            android:textColor="#999999"
            android:textSize="12sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_right_mark"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_whitetriangle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:text="上门"
            android:textColor="#e55c5e"
            android:textSize="10sp"/>
    </RelativeLayout>
</RelativeLayout>

