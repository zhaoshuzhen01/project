<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/state_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="@dimen/h_12dp"
            android:src="@drawable/workservie" />

        <TextView
            android:id="@+id/serviceState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sp_15"
            android:gravity="center"
            android:text="服务中"
            android:textColor="@color/black" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/color_e1e1e1"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/worktime" />

                <TextView
                    android:id="@+id/worklist_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:gravity="center"
                    android:text="2017-11-04(周五)13：00-14：00"

                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h_15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/h_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/worklocation" />

                <TextView
                    android:id="@+id/worklist_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="北京市朝阳区"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/worklist_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h_15dp"
                android:layout_marginLeft="@dimen/h_12dp"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:text="工单号：3423225345353656"
                android:textColor="@color/color_999"

                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
        <ImageView
            android:id="@+id/pic_finish"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/picfinish"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/color_e1e1e1"></View>

    <RelativeLayout
        android:id="@+id/bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_44dp">

        <TextView
            android:id="@+id/finishState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_12dp"
            android:background="@drawable/listback"
            android:focusable="false"
            android:gravity="center"
            android:padding="@dimen/h_6dp"
            android:text="服务完成"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/daohangState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_10dp"
            android:layout_toLeftOf="@+id/finishState"
            android:background="@drawable/listback"
            android:focusable="false"
            android:gravity="center"
            android:visibility="gone"
            android:padding="@dimen/h_6dp"
            android:text="开始导航"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_size_13" />
        <TextView
            android:id="@+id/daohangprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:gravity="center"
            android:padding="@dimen/h_6dp"
            android:text="实付款: ￥ 450"
            android:layout_marginLeft="@dimen/h_10dp"
            android:textColor="@color/color_666"
            android:textSize="@dimen/text_size_13" />
    </RelativeLayout>
</LinearLayout>