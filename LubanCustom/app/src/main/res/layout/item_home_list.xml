<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/h_22dp"
    android:paddingRight="@dimen/h_22dp">


    <ImageView
        android:id="@+id/state_img"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:background="@drawable/home1"
        android:padding="@dimen/h_2dp"
        android:scaleType="fitXY"
        android:src="@drawable/homelistdefaut" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_5dp"
            android:gravity="center"
            android:text="冰箱"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/h_14dp" />

        <TextView
            android:id="@+id/home_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_2dp"
            android:gravity="center"
            android:text="223"
            android:textColor="@color/color_ff0000"
            android:textSize="@dimen/h_13dp" />
    </LinearLayout>
</LinearLayout>