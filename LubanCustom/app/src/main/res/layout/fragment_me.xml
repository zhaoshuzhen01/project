<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_150dp"
        android:background="@color/redm"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.lubandj.master.customview.RoundImageView
            android:id="@+id/headicon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/unloginpic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未登录"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_selfinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="个人信息>"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/h_10dp"
        android:paddingTop="@dimen/h_10dp">

        <LinearLayout
            android:id="@+id/my_address"
            android:layout_width="@dimen/h_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/myaddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_10dp"
                android:text="我的地址"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_f4f4f4"></View>

        <LinearLayout
            android:id="@+id/my_youhuiquan"
            android:layout_width="@dimen/h_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/myyouhuiquan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_10dp"
                android:text="优惠券"
                android:textColor="@color/black"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_f4f4f4"></View>

        <LinearLayout
            android:id="@+id/my_oingjia"
            android:layout_width="@dimen/h_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/mypingjia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_10dp"
                android:text="我的评价"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_kefu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_10dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/h_14dp"
        android:paddingTop="@dimen/h_14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/h_10dp"
            android:text="客服热线"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_14dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_1dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/h_14dp"
        android:paddingTop="@dimen/h_14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/h_10dp"
            android:text="意见反馈"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_14dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_guanyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_1dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/h_14dp"
        android:paddingTop="@dimen/h_14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/h_10dp"
            android:text="关于鹿班"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_14dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_10dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/h_14dp"
        android:paddingTop="@dimen/h_14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/h_10dp"
            android:text="分享软件"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/h_14dp"
            android:src="@drawable/right_arrow"/>
    </RelativeLayout>
</LinearLayout>