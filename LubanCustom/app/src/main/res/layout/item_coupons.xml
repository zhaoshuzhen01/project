<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/h_100dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/h_30dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/coupleft" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/h_10dp"
                android:background="#EA4B4F">

                <ImageView
                    android:id="@+id/moneyicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/whitemoney" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/moneyicon"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_32"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="满500可用"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/h_70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/wr" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/h_10dp"
                android:background="@color/color_ffffff"
                android:paddingBottom="@dimen/h_10dp"
                android:paddingTop="@dimen/h_10dp">

                <TextView
                    android:id="@+id/msgtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_18dp"
                    android:gravity="center"
                    android:text="任务提醒"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/h_14dp" />

                <TextView
                    android:id="@+id/msgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/msgtitle"
                    android:layout_marginLeft="@dimen/h_18dp"
                    android:gravity="center"
                    android:text="2017-12-6"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/h_11dp" />

                <ImageView
                    android:id="@+id/line11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_6dp"
                    android:layout_below="@+id/msgTime"
                    android:layout_marginLeft="@dimen/h_18dp"
                    android:src="@drawable/xuxian"></ImageView>

                <TextView
                    android:id="@+id/msgContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line11"
                    android:layout_marginLeft="@dimen/h_18dp"
                    android:layout_marginTop="@dimen/h_5dp"
                    android:gravity="center"
                    android:text="详细信息"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/h_10dp" />

                <ImageView
                    android:id="@+id/open_youhui"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/line11"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:layout_marginTop="@dimen/h_8dp"
                    android:clickable="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/opencoups" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_coups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h_5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/deatil1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line11"
            android:layout_marginLeft="@dimen/h_118dp"
            android:layout_marginTop="@dimen/h_15dp"
            android:gravity="center"
            android:text="适用服务:不限"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_10dp" />

        <TextView
            android:id="@+id/deatil2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line11"
            android:layout_marginBottom="@dimen/h_15dp"
            android:layout_marginLeft="@dimen/h_118dp"
            android:layout_marginTop="@dimen/h_8dp"
            android:gravity="center"
            android:text="适用地区:不限"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/h_10dp" />
    </LinearLayout>
</LinearLayout>