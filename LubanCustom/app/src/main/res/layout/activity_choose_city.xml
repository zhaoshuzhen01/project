<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"

    android:orientation="vertical">
    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/h_10dp"
        android:paddingBottom="@dimen/h_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/selectaddress_gps"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/h_15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="选中所在城市"
            android:layout_marginLeft="@dimen/h_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/h_10dp"
        android:layout_marginLeft="@dimen/h_15dp"
        android:layout_marginRight="@dimen/h_15dp"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>