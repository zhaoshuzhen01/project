<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_normal"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/dialog_introduce_pic"
    android:src="@drawable/homelistdefaut"
    android:layout_width="wrap_content"
    android:layout_marginLeft="@dimen/h_14dp"
    android:layout_marginTop="@dimen/h_14dp"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/top_price"
        android:layout_marginTop="@dimen/h_30dp"
        android:layout_toRightOf="@+id/dialog_introduce_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 150-180"
        android:layout_marginLeft="@dimen/h_20dp"
        android:textColor="@color/color_ff0000" />
    <TextView
        android:id="@+id/top_name"
        android:layout_toRightOf="@+id/dialog_introduce_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_price"
        android:text="冰箱"
        android:layout_marginLeft="@dimen/h_20dp"
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/dialog_introduce_close"
        android:src="@drawable/ic_login_close"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/h_14dp"
        android:layout_marginTop="@dimen/h_14dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/top_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_introduce_pic"
        android:layout_marginLeft="@dimen/h_14dp"
        android:layout_marginTop="@dimen/h_14dp"
        android:text="选择型号"
        android:textColor="@color/color_lookall" />
   <com.lubandj.master.customview.ChooseXingHao
       android:id="@+id/introde_middle"
       android:layout_marginTop="@dimen/h_20dp"
       android:layout_below="@+id/top_chose"
       android:layout_marginLeft="@dimen/h_12dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"></com.lubandj.master.customview.ChooseXingHao>
    <LinearLayout
        android:layout_marginTop="@dimen/h_20dp"
        android:layout_below="@+id/introde_middle"
        android:background="@drawable/intrdice_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_70dp"
        android:paddingLeft="@dimen/h_14dp"
        android:paddingBottom="@dimen/h_12dp"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/h_12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/jian"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jian"
           />
        <TextView
            android:id="@+id/count"
            android:layout_width="@dimen/h_40dp"
            android:layout_height="@dimen/h_40dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="0"/>
        <ImageView
            android:id="@+id/jia"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jia"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="10dp"></View>
        <TextView
            android:id="@+id/button_text"
            android:layout_marginRight="@dimen/h_10dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            android:paddingRight="@dimen/h_14dp"
            android:paddingLeft="@dimen/h_14dp"
            android:paddingTop="@dimen/h_5dp"
            android:paddingBottom="@dimen/h_5dp"
            android:background="@drawable/selector_btn_send_code_bg"
            android:text="       加入购物车"
            android:drawableLeft="@drawable/wihte_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>