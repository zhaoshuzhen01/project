<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f4f4f4"
    tools:context="com.lubandj.master.activity.BookOrderActivity">
    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>
    <ScrollView
        android:layout_marginTop="@dimen/h_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/choose_address"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/choose_serice_address_lay"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/h_14dp"
                    android:layout_marginBottom="@dimen/h_14dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h_14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/serviceaddress"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_ff0000"
                        android:text="选择服务地址"
                        android:layout_toRightOf="@+id/pic1"
                        android:layout_marginLeft="@dimen/h_6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/h_14dp"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginTop="@dimen/h_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/h_3dp">
                <TextView
                    android:layout_width="@dimen/h_0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="合计"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_show_price11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="￥390"
                    android:textColor="@color/color_ff0000" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/choose_youhui"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_10dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youhui"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="优惠券"
                    android:layout_toRightOf="@+id/pic2"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/choose_time"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_1dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/shangmen_time"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="意向上门时间"
                    android:layout_toRightOf="@+id/pic3"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/choose_liuyan"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_10dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/liuyan"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="留言"
                    android:layout_toRightOf="@+id/pic4"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_100dp"></View>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/h_3dp">
        <TextView
            android:id="@+id/tv_show_price1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="待支付"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_show_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center|left"
            android:padding="5dp"
            android:text="￥390"
            android:textColor="@color/color_ff0000" />

        <TextView
            android:id="@+id/tv_settlement"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiadan"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
