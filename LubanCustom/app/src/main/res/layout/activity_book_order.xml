<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f4f4f4"
    tools:context="com.lubandj.master.activity.BookOrderActivity">
    <View
        android:background="@color/color_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>
    <ScrollView
        android:layout_marginTop="@dimen/h_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/choose_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rl_bottom"
                android:layout_alignParentEnd="true"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/choose_serice_address_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/h_14dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/h_14dp">

                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/h_14dp"
                        android:src="@drawable/serviceaddress"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/h_6dp"
                        android:layout_toRightOf="@+id/pic1"
                        android:text="选择服务地址"
                        android:textColor="@color/color_ff0000"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/h_14dp"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/show_address_lay"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/h_14dp"
                    android:layout_marginBottom="@dimen/h_14dp"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pic1_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/h_14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/selectaddress_gps"/>
                    <ImageView
                        android:id="@+id/ririri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/h_14dp"
                        android:src="@drawable/right_arrow"/>
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_toLeftOf="@+id/ririri"
                       android:layout_marginRight="@dimen/h_10dp"
                       android:layout_toRightOf="@+id/pic1_address"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/address_peo"
                           android:textColor="@color/black"
                           android:text="联系人:xxx"
                           android:layout_marginLeft="@dimen/h_6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/address_adress"
                           android:layout_below="@+id/address_peo"
                           android:textColor="@color/black"
                           android:text="服务地址:xxx"
                           android:layout_marginLeft="@dimen/h_6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/address_phone"
                           android:layout_alignBaseline="@+id/address_peo"
                           android:layout_alignParentRight="true"
                           android:textColor="@color/black"
                           android:text="xxxxxxxxxxxx"
                           android:layout_marginLeft="@dimen/h_6dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/choose_address_has"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/h_14dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/myaddress"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系人："
                            android:textSize="14sp"
                            android:textColor="#333333"
                            />
                            <android.support.v4.widget.Space
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#333333"
                            />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_address_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务地址："
                            android:layout_alignParentLeft="true"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            />
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#333333"
                            />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/h_14dp"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginTop="@dimen/h_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/h_3dp">
                <TextView
                    android:layout_width="@dimen/h_0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:padding="5dp"
                    android:text="合计"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_show_price11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="￥390"
                    android:textColor="@color/color_ff0000" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/choose_youhui"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_10dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/youhui"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="优惠券"
                    android:layout_toRightOf="@+id/pic2"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/choose_time"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_1dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/shangmen_time"/>
                <TextView
                    android:id="@+id/tv_ordertime"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:text="意向上门时间"
                    android:layout_toRightOf="@+id/pic3"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/choose_liuyan"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="@dimen/h_14dp"
                android:layout_marginTop="@dimen/h_10dp"
                android:paddingBottom="@dimen/h_14dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/h_14dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/liuyan"/>
                <TextView
                    android:id="@+id/tv_marktext"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:hint="留言"
                    android:layout_toRightOf="@+id/pic4"
                    android:layout_marginLeft="@dimen/h_6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/h_14dp"
                    android:src="@drawable/right_arrow"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_100dp"></View>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/h_3dp">
        <TextView
            android:id="@+id/tv_show_price1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:padding="5dp"
            android:text="待支付"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_show_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center|left"
            android:padding="5dp"
            android:text="￥390"
            android:textColor="@color/color_ff0000" />

        <TextView
            android:id="@+id/tv_settlement"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/xiadan"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
